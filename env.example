# Database Configuration
DATABASE_URL=sqlite:///data/db.sqlite

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
RECIPIENT_EMAIL=digest@example.com
EMAIL_ENABLED=true

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_CHANNEL=#podcast-digest
SLACK_ENABLED=true

# AI Model Configuration
LOCAL_LLM_MODEL=llama3.1:8b
WHISPER_MODEL=medium
EMBEDDING_MODEL=all-MiniLM-L6-v2
OPENAI_API_KEY=your-openai-key  # Optional fallback

# Storage Paths
AUDIO_STORAGE_PATH=./data/audio
TRANSCRIPT_STORAGE_PATH=./data/transcripts
SUMMARY_STORAGE_PATH=./data/summaries
EMBEDDING_STORAGE_PATH=./data/embeddings

# Processing Configuration
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_TRANSCRIPTIONS=2
MAX_CONCURRENT_SUMMARIES=1
BATCH_SIZE=5

# Schedule Configuration
FEED_CHECK_INTERVAL_HOURS=6
DIGEST_SEND_TIME=08:00
DIGEST_TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/podcast_agent.log 